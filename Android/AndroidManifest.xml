<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.connectutb.xfuel"
    android:versionCode="6"
    android:versionName="1.1.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.connectutb.xfuel.MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Preferences"
            android:theme="@android:style/Theme.Holo"
            android:label="@string/prefs_xfuel">
        </activity>
        
        <activity
            android:name=".FuelReport"
            android:theme="@android:style/Theme.Holo"
            android:label="@string/fuel_report">
        </activity>
        
        <activity
            android:name=".Favorites"
            android:theme="@android:style/Theme.Holo"
            android:label="@string/favorites">
        </activity>        
        
        <activity
            android:name=".FuelHistory"
            android:theme="@android:style/Theme.Holo"
            android:label="@string/fuel_history">
        </activity>
    </application>

</manifest>